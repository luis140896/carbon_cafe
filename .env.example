# Base de datos PostgreSQL
DB_USERNAME=morales_user
DB_PASSWORD=cambia_esto_por_password_seguro

# JWT Secret (mínimo 64 caracteres aleatorios)
# Generar con: openssl rand -base64 64
JWT_SECRET=cambia_esto_por_una_cadena_aleatoria_de_al_menos_64_caracteres_muy_segura

# CORS - orígenes permitidos (separados por coma)
# En producción: solo el dominio real
CORS_ORIGINS=http://localhost:5173
